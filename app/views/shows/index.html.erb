<p id="notice"><%= notice %></p>

<h1>Shows</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Director</th>
      <th>Writer</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @shows.each.with_index(1) do |show, index| %>
      <tr>
				<% if show.user_id == current_user.id %>
				<td><%= "#{index}" %></td>
        <td><%= show.title %></td>
        <td><%= show.description %></td>
        <td><%= show.director %></td>
        <td><%= show.writer %></td>
        <td><%= show.user_id %></td>
        <td><%= link_to 'Show', show %></td>
        <td><%= link_to 'Edit', edit_show_path(show) %></td>
        <td><%= link_to 'Destroy', show, method: :delete, data: { confirm: 'Are you sure?' } %></td>
				<% end %>
		  </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to 'Back', "home" %>
<%= link_to 'New Show', new_show_path %>
