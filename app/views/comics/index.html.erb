<p id="notice"><%= notice %></p>

<h1>Comics</h1>

<table>
  <thead>
    <tr>
      <th>Title |</th>
      <th>| Description |</th>
      <th>| Author |</th>
      <th>| Artist |</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @comics.each.with_index(1) do |comic, index| %>
      <tr>
				<td><%= "#{index}" %></td>
        <td><%= comic.title %></td>
        <td>| <%= comic.description %></td>
        <td>| <%= comic.author %></td>
        <td>| <%= comic.artist %></td>
        <td>| <%= link_to 'Show', comic %> |</td>
        <td>| <%= link_to 'Edit', edit_comic_path(comic) %> |</td>
        <td>| <%= link_to 'Destroy', comic, method: :delete, data: { confirm: 'Are you sure?' } %> ||</td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
